doctype html
html
    head
        title SYSMETIC ENGLISH NEWS POLARITY
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, user-scalable=no")
        script(type="text/javascript" src="https://www.google-analytics.com/analytics.js")

    // body start
    body(cz-shortcut-listen="true")
        div.ui.container
            h2(style="margin-top: 20px;") SYSMETIC News Sentiment analysis
            h4 SYSMETIC news sentiment analysis using polarity
            br

        div.ui.container
            form.ui.form(action="/englishSentiment" method="POST")
                textarea(name="content" rows="10" placeholder="Input News")
                button.ui.button(type="submit" style="margin-top: 20px;") analysis
                br
        

        div.field
            div.ui.container
                br
                h4 polarity is between -100 to 100.
                br
                - if(posNeg){
                    h2= posNeg
                -}
                - if(polarity) {
                    h3 News Polarity : #{polarity}
                -}

